@* _Menu.cshtml *@
@model string
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<style>
    .custom-menu {
        /* placeholder */
    }

        .custom-menu .custom-font {
            font-size: 15px;
            font-family: 'Montserrat', sans-serif;
            color: rgba(15,15,15,.5);
        }

        .custom-menu .navbar-nav .nav-item {
            margin-right: 20px;
        }
</style>

@{
    var currentPath = HttpContextAccessor.HttpContext.Request.Path;
}

<ul class="d-flex @Model navbar-nav me-auto mb-2 mb-lg-0 custom-menu">
    <li class="nav-item">
        <a class="nav-link fw-bold custom-font @(currentPath == "/" ? "text-danger" : "")" aria-current="page" href="/">HOME</a>
    </li>
    <li class="nav-item">
        <a class="nav-link fw-bold custom-font @(currentPath == "/recipes" ? "text-danger" : "")" aria-current="page" href="/recipes">RECIPES</a>
    </li>
    <li class="nav-item">
        <a class="nav-link fw-bold custom-font @(currentPath == "/about" ? "text-danger" : "")" href="/about">ABOUT</a>
    </li>
</ul>
