@* _ExploreRecipe *@

<style>
	.explore-recipe-con {
		width: 320px;
		height: 543px;
	}

		.explore-recipe-con .explore-recipe-text {
			font-size: 22px;
			font-family: 'Montserrat', sans-serif;
			color: #b03b53;
			margin-bottom: 20px;
		}

		.explore-recipe-con .explore-recipe-img-con {
			width: 100%;
			height: 100%;
		}

		.explore-recipe-con .explore-recipe-img {
			row-gap: 10px;
			width: 152px;
			height: fit-content;
			text-align: center;
			color: #27536d;
			font-size: 15px;
			font-family: 'Montserrat', sans-serif;
			cursor: pointer;
			position: relative;
		}

			.explore-recipe-con .explore-recipe-img img {
				width: 100%;
				height: 190px;
				object-fit: cover;
			}

			.explore-recipe-con .explore-recipe-img:hover {
				text-decoration: underline;
			}

			.explore-recipe-con .explore-recipe-img:hover .overlap {
				display: flex !important;
			}

		.explore-recipe-con .img-con {
			position: relative;
		}

			.explore-recipe-con .img-con img {
				width: 100%;
				height: 190px;
				object-fit: cover;
			}

		.explore-recipe-con .overlap {
			display: none !important;
			position: absolute;
			top: 0%;
			width: 100%;
			height: 100%;
			background-color: rgba(0, 0, 0, 0.5);
		}

			.explore-recipe-con .overlap span {
				color: #fff;
			}
</style>

<div class="explore-recipe-con">
	<p class="explore-recipe-text">EXPLORE RECIPES</p>
	<div class="d-flex flex-wrap justify-content-between explore-recipe-img-con">
		<div class="d-flex flex-column explore-recipe-img">
			<div class="img-con">
				<img src="https://thecozycook.com/wp-content/uploads/2020/09/Slow-Cooker-Beef-Stew-Recipe--252x315.jpg" />
				<div class="d-flex justify-content-center align-items-center overlap">
					<span class="material-symbols-outlined">
						skillet
					</span>
				</div>
			</div>
			Slow Cooker Beef Stew
		</div>
	</div>
</div>

